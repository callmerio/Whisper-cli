{
  "name": "whisper-cli-ts",
  "version": "0.1.0",
  "description": "TypeScript 版本的 Gemini 语音转录系统 - 基于 Gemini-2.5-Flash 的智能语音转录工具",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx src/index.ts",
    "cli": "tsx src/cli.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "voice",
    "transcription",
    "gemini",
    "speech-to-text",
    "ai",
    "macos",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "clipboardy": "^4.0.0",
    "dotenv": "^16.4.5",
    "uuid": "^13.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/uuid": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.57.0",
    "prettier": "^3.3.2",
    "tsup": "^8.1.0",
    "tsx": "^4.15.6",
    "typescript": "^5.5.2",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}